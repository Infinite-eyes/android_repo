<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_top_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="top in" />

    <Button
        android:id="@+id/btn_bottom_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bottom in" />

    <Button
        android:id="@+id/btn_left_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left in" />

    <Button
        android:id="@+id/btn_right_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right in" />

    <Button
        android:id="@+id/btn_center_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="center in" />

</LinearLayout>