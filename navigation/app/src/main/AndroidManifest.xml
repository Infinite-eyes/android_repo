<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.nav">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Navigation">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Navigation.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".statusbar.IndexActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name=".statusbar.ui.ColorStatusBarActivity"/>
        <activity android:name=".statusbar.ui.ImageStatusBarActivity" />
        <activity android:name=".statusbar.ui.ImageViewActivity" />
        <activity android:name=".statusbar.ui.SwipeBackActivity" />
        <activity android:name=".statusbar.ui.SwitchModeActivity" />
        <activity android:name=".statusbar.ui.UseInFragmentActivity" />

    </application>

</manifest>